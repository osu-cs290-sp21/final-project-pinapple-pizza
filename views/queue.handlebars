{{> siteNavbar}}


<main class="queue-page">
    <h1>Queue</h1>
    <h3>Room ID: {{roomID}}</h3>
    <h3>Room Name: {{roomName}}</h3>
    <table class="queue-list">
        <tr>
            <th>Position in Queue</th>
            <th>Name</th>
            <th>Breakout Room Number</th>
            <th>Request Type</th>
        </tr>
        {{#each people}}
            <tr>
                <td>{{position}}</td>
                <td>{{name}}</td>
                <td>{{roomNumber}}</td>
                <td>{{reqType}}</td>
            </tr>
        {{/each}}
    </table>
    <button type="button" id="add-queue"><i class="fas fa-plus"></i></button>

</main>
{{> addToQueueModal}}
