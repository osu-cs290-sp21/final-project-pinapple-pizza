{{> siteNavbar}}


<main class="queue-page">
    <div class="title-container">
        <h3>Your Lab Name: {{roomName}}</h3>
        <h4>Room ID: {{roomID}} </h4>
    </div>
    <h2 class="section-label-title">Queue</h2>
    <button type="button" id="add-queue"><i class="fas fa-plus"></i></button>
    <table class="queue-list">
        <tr class="table-header">
            <th>Position in Queue</th>
            <th class="name-cell">Name</th>
            <th>Breakout Room Number</th>
            <th>Request Type</th>
        </tr>
        {{#each people}}
            {{> queueEntry}}
        {{/each}}
    </table>

</main>
{{> addToQueueModal}}
