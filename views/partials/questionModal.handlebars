<div id="create-backdrop" class="hidden"></div>
<div id="create-question" class="hidden">
  <div class="create-post-header">
    <h3>Post a Question</h3>
  </div>

  <div class="modal-body">
    <div class="create-question-input">
      <input type="text" id="question-text-input" class="input-class" required/>
      <label id="question-text-label" class="label-class">Question</label>
    </div>

    <div class="create-question-input">
      <input type="text" id="question-name-input" class="input-class" required/>
      <label id="question-name-label" class="label-class">Name</label>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" id="question-cancel" class="pink-button">Cancel</button>
    <button type="button" id="question-post" class="pink-button">Post</button>
  </div>

</div>
